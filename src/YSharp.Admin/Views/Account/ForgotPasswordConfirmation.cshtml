
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div style="padding-top:10%">
    <div style="text-align:center">
        <img src="/img/logo.png" style="height:58px;width:auto;">

    </div>
    <div style="text-align:center">
        <h2>
            Reset your password
        </h2>
    </div>
    <div class="middle-box   animated fadeInDown " style="padding-top:20px">
        <div class="ibox-content" style="padding:55px 35px 85px 35px;">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="form-group">

                </div>
                <div class="form-group">
                    <p>
                        Check your email for a link to reset your password. If it doesn’t appear within a few minutes, check your spam folder.
                    </p>
                </div>
                <div class="form-footer">
                    <a href="/Account/Login" class="btn btn-primary btn-block">
                        Return to sign in
                    </a>
                </div>
        </div>
    </div>
</div>
