@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}
<div class="ibox">
    <div class="ibox-content">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label asp-for="OldPassword" class="col-lg-2 col-md-4 col-sm-4 control-label"></label>
                <div class="col-lg-4 col-md-4 col-sm-6 ">
                    <input asp-for="OldPassword" class="form-control" type="text" />
                </div>
                <div class="col-lg-6 col-md-4 col-sm-12 ">
                    <span asp-validation-for="OldPassword" class="text-danger help-block m-b-none"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="col-lg-2 col-md-4 col-sm-4 control-label"></label>
                <div class="col-lg-4 col-md-4 col-sm-6 ">
                    <input asp-for="NewPassword" class="form-control" type="text" />
                </div>
                <div class="col-lg-6 col-md-4 col-sm-12 ">
                    <span asp-validation-for="NewPassword" class="text-danger help-block m-b-none"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-lg-2 col-md-4 col-sm-4 control-label"></label>
                <div class="col-lg-4 col-md-4 col-sm-6 ">
                    <input asp-for="ConfirmPassword" class="form-control" type="text" />
                </div>
                <div class="col-lg-6 col-md-4 col-sm-12 ">
                    <span asp-validation-for="ConfirmPassword" class="text-danger help-block m-b-none"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
