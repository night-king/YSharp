
@model ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div style="padding-top:10%">
    <div style="text-align:center">
        <img src="/img/logo.png" style="height:58px;width:auto;">

    </div>
    <div style="text-align:center">
        <h2>
            Reset your password
        </h2>
    </div>
    <div class="middle-box   animated fadeInDown " style="padding-top:20px">
        <div class="ibox-content" style="padding:55px 35px 85px 35px;">
            <form role="form" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Code" />
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p>
                        Make sure it's at least 6 characters including a number and a letter. 
                    </p>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary btn-block">Change password</button>
                </div> 
                <div class="form-footer" style="margin-top:30px">
                    <a href="/account/login" class="btn btn-default btn-block">Back to sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>
