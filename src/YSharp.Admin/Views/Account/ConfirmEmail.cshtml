@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div style="padding-top:10%">
    <div style="text-align:center">
        <img src="/img/logo.png" style="height:58px;width:auto;">

    </div>
    <div style="text-align:center">
        <h2>
            Confirm your email address
        </h2>
    </div>
    <div class="middle-box   animated fadeInDown " style="padding-top:20px">
        <div class="ibox-content" style="padding:55px 35px 85px 35px;">
            <div class="form-group">
                <p>
                    congratulations, your email address verification succeeded, no you can sign in YSharp.
                </p>
            </div>
            <div class="form-footer">
                <a href="/Account/ResetPassword?code=@ViewData["Token"]" class="btn btn-primary btn-block">
                    reset password
                </a>
            </div>
            <div class="form-footer" style="margin-top:30px">

                <a href="/Account/Login" class="btn btn-default btn-block">
                    sign in
                </a>
            </div>
        </div>
    </div>
</div>
